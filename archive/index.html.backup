        }
        
        .feature li {
            margin-bottom: 10px;
            line-height: 1.5;
        }
        
        .feature strong {
            color: #2a6e3f;
        }
        
        .sms-policy {
            background: linear-gradient(135deg, #e8f5e8, #f0f8f0);
            padding: 40px;
            border-radius: 12px;
            border: 2px solid #2a6e3f;
            margin-bottom: 40px;
        }
        
        .sms-policy h3 {
