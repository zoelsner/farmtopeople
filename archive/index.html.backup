            text-align: center;
            font-weight: 600;
            font-size: 1.1em;
            border-left: 4px solid #2a6e3f;
        }
        
        .policy-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 20px;
        }
        
        .policy-item {
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .policy-item strong {
            color: #2a6e3f;
            display: block;
            margin-bottom: 8px;
            font-size: 1.1em;
        }
        
        .tech-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 30px;
            margin-bottom: 40px;
        }
        
        .tech-stack, .use-case {
